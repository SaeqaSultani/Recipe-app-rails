
<div class="container bg-warning p-3 rounded w-50">
<div class="wrapper">
<div class='mt-3 d-flex align-items-center flex-column'>
  <h1 class="mb-5">Create New Food</h1>
   <%= form_with model: @food  do |form| %>

    <div class="mb-3">
     <%= form.text_field :name, placeholder:"Enter Food name", class:"form-control"%>
   </div>
   <h2>Enter food measurement unit</h2>
    <div class="mb-3">
        <%= form.select :measurement_unit, [["grams"], ["kilos"], ["liters"], ["milliliters"]]"%>
     </div>
     <div class="mb-3">
     <%= form.text_area :price, placeholder:"Enter Your Price", class:"form-control" %>
     </div>
    <div class="mb-3">
      <%= form.submit "Add New Food", class:"btn btn-primary px-4 py-2 font-semibold text-white inline-flex items-center space-x-2 rounded" %>
     </div>
  <% end %>
 </div>
 </div>
</div>