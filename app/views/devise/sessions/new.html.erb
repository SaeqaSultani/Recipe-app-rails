<div class="container bg-success p-3 rounded">
<div class="wrapper text-center">
<h2 class="text-light">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field m-4">
    <%= f.label :email,class: "text-light form-label fw-bold" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "w-50 p-2 rounded" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "text-light form-label fw-bold"%><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "w-60 p-2 rounded" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-4">
      <%= f.check_box :remember_me%>
      <%= f.label :remember_me, class:"text-light" %>
    </div>
  <% end %>

  <div class="actions mt-4 mb-4">
    <%= f.submit "Log in", class:"btn btn-outline-light w-25", type:"submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>